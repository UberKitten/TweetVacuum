{
  "name": "TweetVacuum",
  "description": "Sucks up a bunch of tweets from the Twitter search tool, bypassing the 3200 API limit",
  "version": "1.0",
  "background" : {
    "scripts": ["background.js"],
	"persistent": false
  },
  "browser_action": {
	"default_title": "Tweets, man"
  },
  "icons": { "16": "logo_16.png",
           "48": "logo_48.png",
          "128": "logo_128.png" },
  "permissions": [
	"declarativeContent",
	"tabs",
	"storage",
	"unlimitedStorage",
	"https://twitter.com/"
  ],
  "manifest_version": 2
}